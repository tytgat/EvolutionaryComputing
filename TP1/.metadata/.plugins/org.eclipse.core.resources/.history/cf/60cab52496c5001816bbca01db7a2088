    			/*if(random.nextDouble() > 0.5) {
    				individual[i] = 5;
    			}
    			else {
    				individual[i] = -5;
    			}*/
    			
    			/*if(random.nextInt(individual.length) < 0) {
    				individual[i] = (random.nextDouble() * 10) - 5;
    			}*/
    			
    			/*
    			if(random.nextDouble() > 0.5) {
    				individual[i] = (random.nextDouble() * 10) - 5;
				}*/
			}
    	}
        //result population
        return population;
    }
}
